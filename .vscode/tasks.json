{
    "tasks": [
        {
            "type": "cppbuild", // simply the name that the Microsoft C/C++ extension uses for build tasks
            "label": "C: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                // "-Wextra", // Enable extra warnings
                //"-pedantic", // Enforce strict ISO C compliance
                // "-std=c17",
                "-std=c99",
                "${fileDirname}/*.c", // builds all .c files in the directory. This will lead to a "duplicate symbol _main" linker error if you have more than one file with a main function in the same folder.
                // "${file}", // builds only the file you currently have open/active in the editor
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}